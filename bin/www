#!/usr/bin/env node
var debug = require('debug')('myapp');
var app = require('../app');

// If the OPENSHIFT environment defines a port or ip,
// use those. Otherwise, use 8080 and localhost
var server = app.listen(process.env.OPENSHIFT_NODEJS_PORT || 8080,
                        process.env.OPENSHIFT_NODEJS_IP);

console.log("Port: " + (process.env.OPENSHIFT_NODEJS_PORT || 8080));
